class Solution {
    public int search(int[] arr, int target) {
        int start = 0;
        int end = arr.length - 1;

        while (start <= end) {
            int mid = start + (end - start) / 2;

            // ğŸ¯ Found the target
            if (arr[mid] == target) return mid;

            // ğŸ” Check if left half is sorted
            if (arr[mid] >= arr[0]) {
                // âœ… Target is in the sorted left half
                if (arr[start] <= target && arr[mid] >= target) {
                    end = mid - 1;
                } else {
                    // âŒ Target is in the unsorted right half
                    start = mid + 1;
                }
            }
            // ğŸ” Right half is sorted
            else {
                // âœ… Target is in the sorted right half
                if (arr[mid] <= target && arr[end] >= target) {
                    start = mid + 1;
                } else {
                    // âŒ Target is in the unsorted left half
                    end = mid - 1;
                }
            }
        }

        return -1; // âŒ Target not found
    }
}
