              THIS CODE WORK FOR ALL THE TYPE OF ARRAY EITHER A DECRASING ARRAY OR INCRESING ARRAY 



public class Search_element_in_decreasing_order {
    public static int element_serach(int arr[], int tar) {
        int start = 0;
        int end = arr.length - 1;
        boolean isIncresing = arr[start] < arr[end];
        while (start <= end) {
            int mid = start + (end - start) / 2;
            if (arr[mid] == tar) {
                return mid;

            }
            if (isIncresing == true) {
                if (arr[mid] < tar) {
                    start = mid + 1;
                } else {
                    end = mid - 1;
                }
            } else {
                if (arr[mid] > tar) {
                    start = mid + 1;
                } else {
                    end = mid - 1;
                }
            }

        }
        return -1;
    }

    public static void main(String[] args) {
        int arr[] = { 15, 10, 9, 8, 5, 3, 2, 1 };
        int target = 2;
        int position = element_serach(arr, target);
        System.out.println(position);
    }
}


