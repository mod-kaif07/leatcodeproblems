
public class peek_Index_in_mountaion_array {
    public static int findpeekelement(int arr[]) {
        int maxelement = Integer.MIN_VALUE;
        int maxvlaueindex = 0;
        for (int i = 0; i < arr.length; i++) {
            if (arr[i] > maxelement) {
                maxelement = arr[i];
                maxvlaueindex = i;
            }
        }
        return maxvlaueindex;
    }

    public static int findpeekelement_optimize(int arr[]) {
        int st = 0;
        int end = arr.length - 1;
        while (st <= end) {
            int mid = end + (st - end) / 2;
            if (arr[mid] > arr[mid - 1] && arr[mid] > arr[mid + 1]) {

                return mid;
            } else if (arr[mid] > arr[mid - 1]) {
                st = mid + 1;
            } else {
                end = mid - 1;
            }
        }
        return -1;
    }

    public static void main(String[] args) {
        int arr[] = { 2, 4, 6, 8, 10, 8, 5 };
        int idex_ofpeekelement = findpeekelement(arr);
        System.out.println(idex_ofpeekelement);

        int idex_ofpeekelementoptimize = findpeekelement_optimize(arr);
        System.out.println(idex_ofpeekelementoptimize);
    }

}
