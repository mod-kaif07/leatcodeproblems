/*
class Node
{
    int data;
    Node next;
}
*/

class Solution {
    public static void removeLoop(Node head) {
        // code here
        Node slow= head;
        Node fast= head;
      
        boolean loopExists = false;
        while(fast !=null && fast.next !=null){
            slow=slow.next;
            fast=fast.next.next;
            if(slow==fast){
                loopExists=true;
                break;
                
            }
            
        }
        if (!loopExists) {
           
            return;
        }
        slow= head;
        while(slow != fast){
            slow=slow.next;
            fast=fast.next;
        }
        slow= slow.next;
        
        while(slow.next != fast){
            slow=slow.next;
        }
        
       slow.next=null;
      
        return;
        
    }
}
