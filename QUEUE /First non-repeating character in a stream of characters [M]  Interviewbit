import java.util.*;

public class First_non_reapating_character_in_character {
    public static String firstNon_repating(String str) {
        StringBuilder st = new StringBuilder();
        Queue<Character> queue = new LinkedList<>();
        int[] freq = new int[26];
        for (int i = 0; i < str.length(); i++) {
            char ch = str.charAt(i);
            freq[ch - 'a']++;
            queue.add(ch);
            while (!queue.isEmpty() && freq[queue.peek() - 'a'] > 1) {
                queue.remove();

            }
            if (queue.isEmpty()) {
                st.append('#');
            } else {
                st.append(queue.peek());
            }
        }
        return st.toString();

    }

    public static void main(String[] args) {
        String str = "abcacdbd";
        String updateString = firstNon_repating(str);
        System.out.println(updateString);
    }
}
