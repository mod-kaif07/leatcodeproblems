public class revers_String {
    public static String reverseString(char[] arraychar, int st, int end) {

        if (st >= end) {
            return new String(arraychar);
        }

        char temp = arraychar[st];
        arraychar[st] = arraychar[end];
        arraychar[end] = temp;

        return reverseString(arraychar, st + 1, end - 1);

    }

    public static void main(String[] args) {
        String str = "rohit";
        int st = 0;
        int end = str.length() - 1;
        String newString = reverseString(str.toCharArray(), st, end);
        System.out.println("Original String :"+str);
        System.out.println("Reverse String : "+newString);
    }
}

output:------------
Original String :rohit
Reverse String tihor
