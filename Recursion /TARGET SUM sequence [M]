import java.util.ArrayList;
import java.util.List;

public class targetSum_of_sequence {
    public static void sequence(int arr[], int index, int n, int sum, List<Integer> temp, int taget) {

        if (index == n) {
            if (sum == taget) {
                System.out.println("Target subsequence found: " + temp + " -> " + sum);
            }

            // System.out.println(temp + " -> " + sum);
            return;
        }

        sequence(arr, index + 1, n, sum, temp, taget); // if i dont inculde it here sum is same not included

        temp.add(arr[index]);
        sequence(arr, index + 1, n, sum + arr[index], temp, taget); // here we inculde it so that value get added in sum

        temp.remove(temp.size() - 1);

    }

    public static void subset(int arr[], int taget) {

        List<Integer> temp = new ArrayList<>();
        int index = 0;
        int n = arr.length;
        int sum = 0;
        sequence(arr, index, n, sum, temp, taget);

    }

    public static void main(String[] args) {
        int arr[] = { 3, 6, 4 };
        int taget = 10;
        subset(arr, taget);

    }
}
