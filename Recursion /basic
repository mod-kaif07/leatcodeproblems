public class basic {
    public static void print(int n) {
        if (n == 0) {
            System.out.println(0 + " ");
            return;
        }
        print(n - 1);
        System.out.println(n + " ");

    }

    public static void even_number(int n) {
        if (n == 0) {
            System.out.println(0);
            return;
        }
        even_number(n - 2);
        System.out.println(n);
    }

    public static void main(String[] args) {
        even_number(10);

    }
}
