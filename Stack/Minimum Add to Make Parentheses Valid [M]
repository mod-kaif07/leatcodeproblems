import java.util.Stack;

public class min_add_to_valid_palenthesis {

    public static int min_add(String str) {
        int count = 0;
        char[] chars = str.toCharArray();
        Stack<Character> st = new Stack<>();
        for (int i = 0; i < chars.length; i++) {
            char ch = chars[i];
            if (ch == '(' || ch == '{' || ch == '[') {
                st.push(ch);
            } else {
                if (!st.isEmpty()) {
                    st.pop();
                } else {
                    count++;
                }

            }

        }

        return st.size() + count;

    }

    public static void main(String[] args) {
        String str = "()))((";
        int number = min_add(str);
        System.out.println("Total Number of Palenthesis required "+number);
    }
}



Total Number of Palenthesis required 4
