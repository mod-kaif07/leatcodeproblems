class Solution {
    public String longestCommonPrefix(String[] str) {
        if(str==null || str.length==0){
            return "";
        }
        String Prefix= str[0];
        for(int i=1;i<str.length;i++){
            while(str[i].indexOf(Prefix) != 0){
                Prefix=Prefix.substring(0, Prefix.length() - 1);

                if(Prefix.isEmpty()){
                    return "";
                }
            }
        }

        return Prefix;
    }
}
